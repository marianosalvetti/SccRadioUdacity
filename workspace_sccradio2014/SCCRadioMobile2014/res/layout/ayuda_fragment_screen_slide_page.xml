

   
    <LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp" android:weightSum="1">
        <TextView android:id="@android:id/text1"       android:visibility="gone"
            style="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <TextView android:id="@android:id/text2"      android:visibility="gone"
            style="?android:textAppearanceMedium"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description" />
        
         <ImageView
	        android:id="@+id/home_imagen"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:contentDescription="@string/app_description"
	        android:src="@drawable/help_1"
	        android:clickable="true"/>

    </LinearLayout>


 
 