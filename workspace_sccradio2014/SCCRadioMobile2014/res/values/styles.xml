<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
   
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"> -->
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        
    </style>
-->
    <!-- Application theme.
    <style name="AppTheme" parent="AppBaseTheme"> -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. 
           <item name="android:titleTextStyle">@style/AppTheme.TitleTextStyle</item>
    </style>
-->
	<style name="AppTheme.ActionBarStyle" parent="@style/Widget.Sherlock.ActionBar.Solid">
	    <item name="homeAsUpIndicator">@drawable/new_indicator</item>
        
	</style>
	
	<style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow</item>
      
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="AppTheme.ActionBarCenter" parent="@style/Theme.Sherlock.Light.DarkActionBar">
    	    <item name="homeAsUpIndicator">@drawable/new_indicator</item>
            <item name="android:gravity">center</item>
    </style>



    <!-- Evernote menu -->

       <style name="Theme.Evernote" parent="@android:style/Theme.Holo.Light">
           <item name="android:actionBarStyle">@style/ActionBar.Solid.Evernote</item>
           <item name="android:windowBackground">@color/default_evernote_background</item>
           <item name="android:windowActionBarOverlay">true</item>
       </style>

       <style name="ActionBar.Solid.Evernote" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">

           <item name="android:titleTextStyle">@style/Evernote.ActionBar.TitleTextStyle</item>
       </style>

       <style name="Evernote.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
           <item name="android:textColor">@color/evernote_title</item>
       </style>

       <style name="Box_evernote_outer">
           <item name="android:layout_marginTop">?android:actionBarSize</item>
           <item name="android:layout_marginLeft">0dp</item>
           <item name="android:layout_marginRight">0dp</item>
       </style>

       <style name="evernote_account">
           <item name="android:textSize">20dp</item>
           <item name="android:textColor">@color/evernote_title</item>
       </style>

        <style name="evernote_box">
            <item name="android:layout_marginTop">30dp</item>
           <item name="android:layout_marginLeft">30dp</item>
           <item name="android:layout_marginRight">30dp</item>
           <item name="android:layout_marginBottom">20dp</item>
       </style>

       <style name="evernote_button_text">
           <item name="android:textSize">14dp</item>
           <item name="android:textColor">#ffffff</item>
           <item name="android:shadowColor">#330000</item>
           <item name="android:shadowDy">1</item>
       </style>
</resources>
